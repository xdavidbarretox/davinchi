    <lesson name="Consequences">
      <content><![CDATA[
      <audio id="audio_01" autoplay>
        <source src="course/audios/009_consequences.mp3" type="audio/mp3">
      </audio>
        <img src="course/images/concecuences.jpg" class="background_full">
        <div id="Content" style="position: absolute; top: 60px; right: 40px; width:50%">
